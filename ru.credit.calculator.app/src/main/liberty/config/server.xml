<server description="Sample Liberty server">

    <featureManager>
        <feature>jsf-2.2</feature>
    </featureManager>

    <variable name="default.http.port" defaultValue="8080" />
    <variable name="default.https.port" defaultValue="8080" />

    <!-- tag::server[] -->
    <httpEndpoint host="*" httpPort="${default.http.port}"
        httpsPort="${default.https.port}" id="defaultHttpEndpoint" />

    <!-- tag::EARdefinition[] -->
    <enterpriseApplication id="ru.credit.calculator.app"
        location="ru.credit.calculator.app.ear"
        name="ru.credit.calculator.app" />
    <!-- end::EARdefinition[] -->
    <!-- end::server[] -->
</server>
